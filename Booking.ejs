    <div class="hospitality-section text-center">
        <h1 class="title">Book a Stay</h1>
        <div class="line"></div>
    </div>

    <div class="form-container">
        <form>
            <div class="form-group">
                <label for="destination" class="custom-label">Destination</label>
                <span class="icon"><i class="bi bi-search"></i></span>
                <input type="text" id="destination" placeholder="Find a Hotel or Destination" />
            </div>

            <div class="d-flex flex-column flex-md-row justify-content-between gap-3">
                <div class="form-group flex-fill">
                    <label for="checkin" class="custom-label">From Date</label>
                    <input type="date" id="checkin" />
                </div>
                <div class="form-group flex-fill">
                    <label for="checkout" class="custom-label">Till Date</label>
                    <input type="date" id="checkout" />
                </div>
            </div>

            <div class="form-group">
                <label for="guests" class="custom-label">Guests</label>
                <span class="icon"><i class="bi bi-person"></i></span>
                <select id="guests">
                    <option>1 Adult, 0 Child - 1 Room</option>
                    <option>2 Adults, 1 Child - 1 Room</option>
                    <option>2 Adults, 0 Children - 1 Room</option>
                </select>
            </div>

            <div class="form-footer d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-3 mt-3">
                <div class="form-group w-100">
                    <label for="special-code" class="custom-label">Special Code</label>
                    <span class="icon"><i class="bi bi-star"></i></span>
                    <select id="special-code">
                        <option selected disabled>Choose a Special Code</option>
                        <option>Promo Code</option>
                        <option>Corporate Code</option>
                    </select>
                </div>
                <button type="submit" class="mt-md-0 mt-3">Check Rates</button>
            </div>
        </form>
    </div>
      

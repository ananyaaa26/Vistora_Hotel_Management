                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <% navLinks.forEach(function(link) { %>
                        <li class="nav-item">
                            <a class="nav-link <%= link.url === '/rooms' ? 'active' : '' %>" href="<%= link.url %>"><%= link.text %></a>
                        </li>
                    <% }); %>
                </ul>
                <div class="d-flex">
                    <a href="/booking" class="btn btn-custom me-2">BOOK NOW</a>
